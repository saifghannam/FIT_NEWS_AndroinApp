<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/card_bk"
    tools:context=".ClickedNewsFragment"> <!-- Replace "com.yourpackage" with your actual package name -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="417dp"
            android:layout_height="240dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/description_id"
            android:layout_width="379dp"
            android:layout_height="120dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/oswald"
            android:paddingStart="8dp"
            android:text="TextView"
            android:textColor="?attr/text"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/content_id"
            android:layout_width="383dp"
            android:layout_height="134dp"
            android:maxLines="3"
            android:paddingStart="8dp"
            android:paddingTop="70dp"
            android:text="TextView"
            android:textColor="?attr/text"
            android:textSize="15sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_id" />

        <TextView
            android:id="@+id/publishedAt_id"
            android:layout_width="304dp"
            android:layout_height="74dp"
            android:layout_marginTop="16dp"

            android:paddingStart="8dp"
            android:text="TextView"
            android:textColor="?attr/text"

            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_id" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
